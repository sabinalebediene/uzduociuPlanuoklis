{% extends 'base.html.twig' %}

{% block title %}Edit task
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1 class="create">Edit task</h1>
					</div>
					<div class="card-body">
						<form action="{{path('task_update', {id: task.id})}}" method="POST">
							<div class="form-group">
								<label for="tasks_status">Status:</label>
								<select class="form-control" name="tasks_status" id="tasks_status">
									{% for status in statuses %}
										<option value="{{status.id}}" {% if status.id == task.statusId %} selected {% endif %}>
											{{status.name}}</option>
									{% endfor %}
								</select>
								<small class="form-text text-muted">Status</small>
							</div>
							<div class="form-group">
								<label for="task_task_name">Task:</label>
								<input class="form-control" type="text" name="task_task_name" value="{{task.taskName}}" id="task_task_name">
								<small class="form-text text-muted">Task</small>
							</div>
							<button class="btn btn-primary" type="submit">Edit task</button>
							{# <input type="hidden" name="token" value="{{csrf_token('')}}"/> #}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
