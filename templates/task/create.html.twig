{% extends 'base.html.twig' %}

{% block title %}Create new task
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Create new task</h1>
					</div>
					<div class="card-body">
						<form action="{{path('task_store')}}" method="POST">
							<div class="new">
								<p>Status:</p>
								<select name="tasks_status" class="form-control">
									<option value="0">Select status</option>
									{% for status in statuses %}
										<option value="{{status.id}}">
											{{status.name}}</option>
									{% endfor %}
								</select>
							</div>
							<div class="form-group">
								<p>Status name:</p>
								<input type="text" class="form-control" name="task_task_name">
							</div>
							<div class="form-group">
								<label>Status description</label>
								<textarea name="task_task_description" id="summernote"></textarea>
							</div>
							<div class="form-group">
								<p>Task add date:</p>
								<input type="text" class="form-control" name="task_add_date">
							</div>
							<div class="form-group">
								<p>Status completed date:</p>
								<input type="text" class="form-control" name="task_completed_date">
							</div>
							<button type="submit" class="btn btn-primary">Add new task</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}