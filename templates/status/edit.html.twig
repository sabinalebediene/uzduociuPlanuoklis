{% extends 'base.html.twig' %}

{% block title %}Edit Status
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Edit  Status</h1>
					</div>
					<div class="card-body">
						<form action="{{path('status_update', {id:status.id})}}" method="POST">
							<div class="form-group">
								<label>Name</label>
								<input type="text" name="status_name" class="form-control" value="{{status_name}}">
								<small class="form-text text-muted">status name</small>
							</div>
							<button type="submit" class="btn btn-primary">Edit Master</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}