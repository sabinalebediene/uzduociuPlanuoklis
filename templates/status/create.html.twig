{% extends 'base.html.twig' %}

{% block title %}Create new Status
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Create new Status</h1>
					</div>

					<div class="card-body">
						<form action="{{path('status_store')}}" method="POST">
							<div class="form-group">
								<label>Name:</label>
								<input type="text" name="status_name" class="form-control" value="{{status_name}}">
								<small class="form-text text-muted">Status name</small>
							</div>
							<button type="submit" class="btn btn-primary">Add new Status</button>
							{# csrf token #}
							{# <input type="hidden" name="token" value="{{ csrf_token('create_author_bla') }}"/> #}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}